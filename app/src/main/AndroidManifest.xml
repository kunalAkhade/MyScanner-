<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myscanner">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyScanner">
        <activity android:name=".ScanRecyclerView"
            android:theme="@style/Theme.MyScanner2"></activity>
        <activity android:name=".Scan2" />
        <activity
            android:name=".Text"
            android:theme="@style/Theme.MyScanner2" />
        <activity
            android:name=".ExtractText"
            android:theme="@style/Theme.MyScanner2" />
        <activity
            android:name=".SignUp"
            android:theme="@style/Theme.MyScanner" />
        <activity
            android:name=".LoginPage"
            android:theme="@style/Theme.MyScanner" />
        <activity
            android:name=".ExtractAct"
            android:theme="@style/Theme.MyScanner2" />
        <activity android:name=".Scan" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.MyScanner2" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MyScanner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.MyScanner2" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>